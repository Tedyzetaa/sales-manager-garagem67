{
  "name": "sales-manager-garagem67",
  "version": "1.0.0",
  "description": "Sistema completo de automação comercial para a Garagem 67",
  "main": "JS/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "clean": "rm -rf dist build node_modules",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "sales",
    "management",
    "firebase",
    "garagem67"
  ],
  "author": "Garagem 67",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.3.24",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "firebase": "^9.23.0"
  },
  "build": {
    "appId": "com.garagem67.salesmanager",
    "productName": "Sales Manager - Garagem 67",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}